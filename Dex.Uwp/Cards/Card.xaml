<ContentControl x:Class="Dex.Uwp.Cards.Card"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="using:Dex.Uwp.Cards"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                d:DesignHeight="200"
                d:DesignWidth="400"
                mc:Ignorable="d">

    <ContentControl.Template>
        <ControlTemplate>
            <Grid>
                <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,0,0,4">
                    <Border.Background>
                        <SolidColorBrush Color="{ThemeResource SystemListLowColor}" />
                    </Border.Background>
                    <!--<Border.BorderBrush>
                        <SolidColorBrush Color="{ThemeResource SystemChromeHighColor}" />
                    </Border.BorderBrush>-->
                    <ContentPresenter />
                </Border>
            </Grid>
        </ControlTemplate>
    </ContentControl.Template>
</ContentControl>