<ContentControl x:Class="Dex.Uwp.Controls.PokemonTypeBadgeControl"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="using:Dex.Uwp.Controls"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                d:DesignHeight="300"
                d:DesignWidth="400"
                mc:Ignorable="d">

    <ContentControl.Template>
        <ControlTemplate>
            <Border Width="{TemplateBinding Width}"
                    Height="{TemplateBinding Height}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="{Binding Type,
                                         Converter={StaticResource PokemonTypeToColorConverter}}"
                    CornerRadius="1">
                <Viewbox>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="10"
                               Foreground="{StaticResource SystemAltHighColorBrush}"
                               Text="{Binding Type}" />
                </Viewbox>
            </Border>
        </ControlTemplate>
    </ContentControl.Template>
</ContentControl>